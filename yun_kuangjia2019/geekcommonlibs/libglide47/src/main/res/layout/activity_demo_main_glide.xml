<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image14"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image21"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:siv_border_color="@color/red"
                    app:siv_border_width="1dp"
                    app:siv_pressed_alpha="0.2"
                    app:siv_pressed_color="@color/red"
                    app:siv_radius="5dp" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image22"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:siv_border_color="@color/yellow"
                    app:siv_border_width="3dp"
                    app:siv_pressed_alpha="0.3"
                    app:siv_pressed_color="@color/yellow"
                    app:siv_shape_type="circle" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image23"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:siv_border_color="@color/orange"
                    app:siv_border_width="2dp"
                    app:siv_pressed_alpha="0.3"
                    app:siv_pressed_color="@color/orange"
                    app:siv_radius="15dp"
                    app:siv_shape_type="rectangle" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image24"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:siv_border_color="@color/colorPrimary"
                    app:siv_border_width="2dp"
                    app:siv_pressed_alpha="0.5"
                    app:siv_pressed_color="@color/white"
                    app:siv_shape_type="circle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image31"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:siv_shape_type="rectangle" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image32"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:siv_border_color="@color/blue"
                    app:siv_border_width="2dp"
                    app:siv_pressed_alpha="0.5"
                    app:siv_pressed_color="@color/white"
                    app:siv_shape_type="circle" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image33"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:siv_pressed_alpha="0.5"
                    app:siv_pressed_color="@color/white"
                    app:siv_radius="15dp"
                    app:siv_shape_type="rectangle" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/image34"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:siv_border_color="@color/orange"
                    app:siv_border_width="2dp"
                    app:siv_pressed_alpha="0.5"
                    app:siv_pressed_color="@color/white"
                    app:siv_radius="10dp"
                    app:siv_shape_type="rectangle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.geek.libglide47.base.GlideImageView
                        android:id="@+id/image41"
                        android:layout_width="match_parent"
                        android:layout_height="182dp"
                        android:transitionName="@string/transitional_image"
                        app:siv_shape_type="rectangle" />

                    <com.geek.libglide47.base.progress.CircleProgressView
                        android:id="@+id/progressView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:progress="0"
                        app:cpv_innerPadding="2dp"
                        app:cpv_outerColor="@color/transparent90_white"
                        app:cpv_outerSize="1dp"
                        app:cpv_progressNormalColor="@color/transparent"
                        app:cpv_progressReachColor="@color/transparent90_white"
                        app:cpv_progressStyle="FillInnerArc" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingBottom="20dp">

                    <com.geek.libglide47.base.GlideImageView
                        android:id="@+id/image42"
                        android:layout_width="match_parent"
                        android:layout_height="182dp"
                        android:background="@color/transparent05"
                        android:transitionName="@string/transitional_image"
                        app:siv_shape_type="rectangle" />

                    <com.geek.libglide47.base.progress.CircleProgressView
                        android:id="@+id/progressView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:progress="0"
                        app:cpv_progressNormalColor="@color/transparent10"
                        app:cpv_progressReachColor="@color/transparent90_white"
                        app:cpv_progressStyle="FillInner"
                        app:cpv_progressTextColor="@color/red"
                        app:cpv_progressTextSize="13sp"
                        app:cpv_progressTextVisible="false" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
