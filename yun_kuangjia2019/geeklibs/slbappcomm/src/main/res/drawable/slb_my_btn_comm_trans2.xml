<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke android:width="0dp" android:color="@color/transparent50" />
            <solid android:color="@color/transparent50" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="0dp" android:color="@color/transparent30_white" />
            <solid android:color="@color/transparent30_white" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>