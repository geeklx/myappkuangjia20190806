<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50mm"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50mm"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="36mm"
            android:layout_height="36mm"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10mm"
            android:background="@drawable/slb_left_back3"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_center"
            style="@style/logintop"
            android:text="设置"
            android:textColor="@color/black_000"
            android:textSize="20mm" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="30mm"
            android:layout_height="30mm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10mm"
            android:background="@drawable/slb_logo"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>