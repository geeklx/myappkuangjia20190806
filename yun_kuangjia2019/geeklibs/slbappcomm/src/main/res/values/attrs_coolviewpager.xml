<?xml version="1.0" encoding="utf-8"?>
<!--
自定义属性,属性名称后缀参考UltraViewPager(https://github.com/alibaba/UltraViewPager)
-->
<resources>
    <declare-styleable name="LxCoolViewPager">
        <attr name="lxcvp_scrollmode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="lxcvp_autoscroll" format="boolean" />
        <attr name="lxcvp_intervalinmillis" format="integer"/>
        <attr name="lxcvp_autoscrolldirection" format="enum">
            <enum name="forward" value="0" />
            <enum name="backward" value="1" />
        </attr>
        <attr name="lxcvp_infiniteloop" format="boolean" />
        <attr name="lxcvp_scrollduration" format="integer"/>
        <attr name="lxcvp_drawedgeeffect" format="boolean"/>
        <attr name="lxcvp_edgeeffectcolor" format="color"/>
    </declare-styleable>
</resources>