<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="349mm"
        android:layout_height="110mm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6mm"
        android:layout_marginBottom="6mm"
        android:background="@drawable/slb_vip_card3">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20mm"
            android:text="月费会员"
            android:textColor="@color/color_333333"
            android:textSize="20mm" />

        <TextView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="30mm"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10mm"
            android:background="@drawable/slb_vip_tc_tip1"
            android:gravity="center"
            android:text="测试"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60mm"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20mm"
            android:layout_marginRight="20mm">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22mm"
                android:text="原价￥216"
                android:textColor="@color/color_333333"
                android:textSize="14mm" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20mm"
                android:layout_marginBottom="20mm"
                android:layout_toLeftOf="@+id/tv4"
                android:text="￥188"
                android:textColor="@color/color_333333"
                android:textSize="24mm" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20mm"
                android:background="@drawable/btn_common_whitevip"
                android:paddingLeft="20mm"
                android:paddingTop="6mm"
                android:paddingRight="20mm"
                android:paddingBottom="6mm"
                android:text="立即开通"
                android:textColor="@color/color_333333"
                android:textSize="14mm" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
