<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clipChildren="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll23"
        android:layout_width="322mm"
        android:layout_height="307mm"
        android:layout_centerInParent="true"
        android:background="@drawable/slb_vipcode_gx1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40mm"
            android:layout_marginTop="140mm"
            android:layout_marginRight="40mm"
            android:lineSpacingMultiplier="1.2"
            android:text="小朋友，恭喜你获得了"
            android:textColor="@color/color4F4B21"
            android:textSize="16mm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20mm"
            android:gravity="center">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24mm"
                android:layout_marginRight="24mm"
                android:text=""
                android:textColor="@color/color4F4B21"
                android:textSize="20mm" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="210mm"
            android:layout_height="56mm"
            android:layout_marginTop="20mm"
            android:background="@drawable/slb_vipcode_qkk" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="40mm"
        android:layout_height="40mm"
        android:layout_above="@+id/ll23"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30mm"
        android:layout_marginBottom="-70mm"
        android:background="@drawable/slb_vipcode_del"
        android:visibility="visible" />


</RelativeLayout>