<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120mm"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#EBEBEB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12mm"
        android:layout_marginRight="12mm"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="102mm"
            android:layout_height="102mm"
            android:layout_gravity="center_vertical">

            <com.geek.libglide47.base.GlideImageView
                android:id="@+id/iv1"
                android:layout_width="102mm"
                android:layout_height="102mm"
                android:layout_margin="0mm"
                android:scaleType="centerCrop"
                android:src="@drawable/animation_img1"
                app:siv_border_color="@color/white"
                app:siv_border_width="0dp"
                app:siv_pressed_alpha="0.2"
                app:siv_pressed_color="@color/white"
                app:siv_radius="8dp"
                app:siv_shape_type="rectangle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/iv_bktt1"
                    android:layout_width="40mm"
                    android:layout_height="40mm"
                    android:layout_marginLeft="0mm"
                    android:layout_marginTop="0mm"
                    android:src="@drawable/slb_bktt_icon" />
                <!--android:src="@drawable/slb_bktt_icon"-->

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/iv_bktt2"
                    android:layout_width="40mm"
                    android:layout_height="40mm"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0mm"
                    android:layout_marginRight="0mm" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/iv_bktt3"
                    android:layout_width="40mm"
                    android:layout_height="40mm"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0mm"
                    android:layout_marginBottom="0mm" />

                <com.geek.libglide47.base.GlideImageView
                    android:id="@+id/iv_bktt4"
                    android:layout_width="30mm"
                    android:layout_height="30mm"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="0mm"
                    android:layout_marginBottom="0mm" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102mm"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10mm"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                style="@style/logincommtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLength="10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_000"
                android:textSize="20mm" />

            <TextView
                android:id="@+id/tv2"
                style="@style/logincommtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="儿童文学中的圣经"
                android:textColor="@color/black"
                android:textSize="14mm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3"
                    style="@style/logincommtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/slb_wjj"
                    android:drawablePadding="6mm"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_979797"
                    android:textSize="12mm" />

                <TextView
                    android:id="@+id/tv4"
                    style="@style/logincommtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20mm"
                    android:drawableLeft="@drawable/slb_sp"
                    android:drawablePadding="6mm"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_979797"
                    android:textSize="12mm" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="25mm"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv51"
                        android:layout_width="wrap_content"
                        android:layout_height="25mm"
                        android:ellipsize="none"
                        android:gravity="center"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:text="￥78"
                        android:textColor="#FB6666"
                        android:textSize="16mm"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tv52"
                        android:layout_width="50mm"
                        android:layout_height="25mm"
                        android:background="@drawable/btn_lb_red"
                        android:gravity="center"
                        android:text="免费"
                        android:textColor="@color/white"
                        android:textSize="16mm"
                        android:visibility="gone"
                        tools:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
