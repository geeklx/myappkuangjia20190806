<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5mm"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#1D272727"
            app:cardCornerRadius="8mm"
            app:cardElevation="2mm"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true" />
    </FrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6mm"
        android:paddingBottom="3mm"
        android:background="@drawable/shape_bg_item_corner"
        app:layout_constraintDimensionRatio="1:0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.geek.libglide47.base.GlideImageView
        android:id="@+id/brademo1_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/slb_logo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siv_border_color="@color/white"
        app:siv_border_width="0mm"
        app:siv_pressed_alpha="0.3"
        app:siv_pressed_color="@color/white"
        app:siv_radius="8mm"
        app:siv_shape_type="rectangle" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/brademo1_img"
        app:layout_constraintLeft_toLeftOf="@id/brademo1_img"
        app:layout_constraintRight_toRightOf="@id/brademo1_img"
        app:layout_constraintTop_toTopOf="@id/brademo1_img">

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt1"
            android:layout_width="40mm"
            android:layout_height="40mm" />
        <!--android:src="@drawable/slb_bktt_icon"-->

        <TextView
            android:id="@+id/tv_tips123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="0mm"
            android:background="@drawable/slb_my_btn_comm_you"
            android:paddingLeft="6mm"
            android:paddingRight="6mm"
            android:text="推荐"
            android:textColor="@color/white"
            android:textSize="10mm"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt2"
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:layout_alignParentRight="true" />
        <!--android:src="@drawable/slb_xm_icon"-->

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt3"
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:layout_alignParentBottom="true" />

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt4"
            android:layout_width="30mm"
            android:layout_height="30mm"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
        <!--android:src="@drawable/slb_vip_icon22"-->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

