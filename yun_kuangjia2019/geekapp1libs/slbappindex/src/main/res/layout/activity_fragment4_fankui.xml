<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->
    <include
        android:id="@+id/lltop"
        layout="@layout/activity_commtop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lltop"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20mm"
                android:layout_marginTop="10mm"
                android:text="问题描述"
                android:textColor="@color/black_000"
                android:textSize="20mm" />

            <LinearLayout
                android:id="@+id/llcontent1"
                android:layout_width="match_parent"
                android:layout_height="177mm"
                android:layout_margin="14mm"
                android:background="@drawable/btn_fk"
                android:orientation="vertical"
                android:padding="10mm">

                <EditText
                    android:id="@+id/edt1"
                    style="@style/logincontentedit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:hint="@string/slb_my_tip_fkzx_wtms"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="1.2"
                    android:lines="10"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textSize="16mm" />

                <TextView
                    android:id="@+id/tv_ed_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:text="还能输入100字"
                    android:textColor="@color/gray"
                    android:textSize="12mm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10mm"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20mm"
                    android:text="联系方式"
                    android:textColor="@color/black_000"
                    android:textSize="20mm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10mm"
                    android:text="(便于我们联系您处理反馈)"
                    android:textColor="@color/color999999"
                    android:textSize="14mm" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llcontent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llcontent1"
                android:layout_margin="10mm"
                android:background="@drawable/btn_fk"
                android:orientation="vertical"
                android:padding="2mm">

                <EditText
                    android:id="@+id/edt2"
                    style="@style/logincontentedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/rule_text"
                    android:hint="可输入手机号、微信、qq、邮箱等"
                    android:maxLength="20"
                    android:padding="10mm"
                    android:text=""
                    android:textSize="16mm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10mm"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20mm"
                    android:text="联系我们"
                    android:textColor="@color/black_000"
                    android:textSize="20mm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10mm"
                    android:text="(人工服务时间：9:00-21:00)"
                    android:textColor="@color/color999999"
                    android:textSize="14mm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20mm"
                android:layout_marginTop="20mm"
                android:orientation="vertical"
                android:padding="2mm"
                android:visibility="visible">
                <!--android:background="@drawable/btn_fk"-->

                <TextView
                    android:id="@+id/tv_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6mm"
                    android:paddingBottom="6mm"
                    android:text="电话：15137615080"
                    android:textSize="16mm" />

                <TextView
                    android:id="@+id/tv_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6mm"
                    android:paddingBottom="6mm"
                    android:text="电话：15137615080"
                    android:textSize="16mm" />

                <TextView
                    android:id="@+id/tv_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6mm"
                    android:paddingBottom="6mm"
                    android:text="电话：15137615080"
                    android:textSize="16mm" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_tj1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="0mm">

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="50mm"
            android:layout_marginLeft="20mm"
            android:layout_marginTop="10mm"
            android:layout_marginRight="20mm"
            android:layout_marginBottom="18mm"
            android:background="@drawable/slb_my_btn_sure"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="18mm" />
    </LinearLayout>
</LinearLayout>
