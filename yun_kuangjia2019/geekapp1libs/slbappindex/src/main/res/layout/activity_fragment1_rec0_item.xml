<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130mm"
    android:layout_height="160mm"
    android:layout_gravity="center"
    android:layout_marginLeft="2mm"
    android:layout_marginTop="0mm"
    android:layout_marginRight="2mm"
    android:layout_marginBottom="-1mm"
    android:background="@drawable/slb_books_yy1"
    android:clipChildren="true">

    <com.example.slbappcomm.widgets.CustomRoundAngleImageView
        android:id="@+id/brademo1_img"
        android:layout_width="120mm"
        android:layout_height="match_parent"
        android:layout_marginTop="2mm"
        android:layout_marginBottom="9mm"
        android:scaleType="centerCrop"
        app:left_bottom_radius="0mm"
        app:left_top_radius="0mm"
        app:right_bottom_radius="10mm"
        app:right_top_radius="10mm" />

    <ImageView
        android:layout_width="10mm"
        android:layout_height="match_parent"
        android:layout_marginTop="2mm"
        android:layout_marginBottom="8mm"
        android:src="@drawable/slb_books_yy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt1"
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:layout_marginTop="2mm" />
        <!--android:src="@drawable/slb_bktt_icon"-->

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt2"
            android:layout_width="30mm"
            android:layout_height="18mm"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2mm"
            android:layout_marginRight="10mm" />
        <!--android:src="@drawable/slb_xm_icon"-->

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt3"
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8mm" />

        <com.geek.libglide47.base.GlideImageView
            android:id="@+id/iv_bktt4"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10mm"
            android:layout_marginBottom="10mm" />
        <!--android:src="@drawable/slb_vip_icon22"-->

    </RelativeLayout>

    <!--<com.geek.libglide47.base.GlideImageView-->
    <!--android:id="@+id/brademo1_img"-->
    <!--android:layout_width="96mm"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@drawable/animation_img1" />-->

    <TextView
        android:id="@+id/brademo1_tweetName"
        style="@style/tweetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brademo1_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:text="Chad"
        android:visibility="gone" />

    <TextView
        android:id="@+id/brademo1_tweetText"
        style="@style/tweetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brademo1_tweetName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="Hello world!"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone" />

    <TextView
        android:id="@+id/brademo1_tweetDate"
        style="@style/tweetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/brademo1_tweetName"
        android:layout_alignBottom="@+id/brademo1_tweetName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/dp_10"
        android:text="04/06/13"
        android:visibility="gone" />

    <!--<ImageView-->
