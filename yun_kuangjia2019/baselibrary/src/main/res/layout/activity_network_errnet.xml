<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/empty_errnet_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x2"
            android:drawableTop="@drawable/nowifi2"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="@color/color999999"
            android:textSize="16mm" />

        <TextView
            android:id="@id/empty_errnet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/ok_tanchuang"
            android:paddingBottom="@dimen/y9"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            android:paddingTop="@dimen/y9"
            android:text="@string/retry_text"
            android:textColor="@color/white"
            android:textSize="18mm" />
    </LinearLayout>

</RelativeLayout>